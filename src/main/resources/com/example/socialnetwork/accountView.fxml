<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="692.0" prefWidth="996.0" stylesheets="@styling/accountStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetwork.controllers.AccountController">
    <children>
        <HBox fx:id="mainHBox" prefHeight="692.0" prefWidth="996.0">
            <children>
                <AnchorPane prefHeight="692.0" prefWidth="169.0" styleClass="stackPaneStyle">
                    <children>
                        <Button fx:id="friendsBtn" mnemonicParsing="false" onAction="#onFriendsBtnClicked" prefHeight="79.0" prefWidth="171.0" text="Friends">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Button>
                        <Button fx:id="chatBtn" layoutY="79.0" mnemonicParsing="false" onAction="#onChatBtnClicked" prefHeight="79.0" prefWidth="171.0" text="Chat">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Button>
                        <Button fx:id="eventsBtn" layoutY="158.0" mnemonicParsing="false" onAction="#onEventsBtnClicked" prefHeight="79.0" prefWidth="171.0" text="Events">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Button>
                        <ImageView fx:id="logoutImg" fitHeight="145.0" fitWidth="171.0" layoutY="547.0" onMousePressed="#onLogoutImgPress" pickOnBounds="true" styleClass="image">
                            <image>
                                <Image url="@images/logout_icon.png" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="currentPane" prefHeight="692.0" prefWidth="826.0" styleClass="rightStyle">
                    <children>
                        <Label fx:id="nameLabel" layoutX="324.0" layoutY="311.0">
                            <font>
                                <Font size="40.0" />
                            </font>
                        </Label>
                        <Label layoutX="325.0" layoutY="247.0" text="Welcome,">
                            <font>
                                <Font size="40.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
